@using BlazorDAL.Models;
@using BlazorUI.Api;
@inject DialogService dialogService;
<div class="container text-center">
    <div class="row">
        <div class="col justify-content-center">
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3" Style="text-align:center">Bobin Numarası</RadzenText>
            <RadzenTextBox @bind-Value=customerOrderDto.CustomerOrderId class="textBox"></RadzenTextBox>
        </div>
    </div>
    <div class="row">
        <div class="col justify-content-center text-center mt-2">
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3" Style="text-align:center">Durum</RadzenText>
            <PdiStatusDropdwn @bind-pdiStatusId=customerOrderDto.CustomerOrderStatusId></PdiStatusDropdwn>
        </div>
    </div>
    <div class="row justify-content-center mt-4 text-center mr-2">
        <div class="col col-sm-6">
            <RadzenButton ButtonStyle="ButtonStyle.Warning" Click="(()=>Save())" Variant="Variant.Flat" Shade="Shade.Lighter" Icon="pageview" class="m-1 btn mr-2" Text="Güncelle" />
        </div>
        <div class="col col-sm-6">
            <RadzenButton ButtonStyle="ButtonStyle.Danger" Click="(()=>CloseDlg())" Variant="Variant.Flat" Shade="Shade.Lighter" Icon="delete" class="m-1 btn" Text="İptal" />
        </div>
    </div>
</div>
<style>
    .btn {
        padding:2px;
        width:8rem;
        height:2rem;
        border-radius:10px;
    }
    .textBox{
        border-radius:10px !important;
        height:2.4rem !important;
        width:200px !important;

    }
</style>
@code {
    [Parameter]
    public string coilId { get; set; } = "";
    public CustomerOrderDto customerOrderDto = new CustomerOrderDto { };
    [Inject]
    CustomerOrderApi customerOrderApi { get; set; }
    protected override async Task OnInitializedAsync()
    {
        customerOrderDto = await customerOrderApi.GetCustomerOrder(coilId);
    }
    async void Save()
    {
        await customerOrderApi.ChangePdiStatus(customerOrderDto);
        dialogService.Close(true);
    }
    void CloseDlg()
    {
        dialogService.Close(true);
    }
}

