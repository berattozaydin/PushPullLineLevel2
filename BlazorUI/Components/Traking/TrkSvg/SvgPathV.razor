@inherits SvgBase

<SvgBase Scale="Scale">
    <path id="@Id" style="stroke:@Color;stroke-width:@Width;stroke-opacity:1;"
          d="M @X,@(Length + Y) V @Y" />
</SvgBase>


@code {
    [Parameter] public string Color { get; set; } = "black";
    [Parameter] public float Width { get; set; } = 1;
    [Parameter] public float Length { get; set; } = 1;
}
